" set the background to dark
set background=dark

" Get swap files out of my sight
set backupdir=~/.vim/tmp,.
set directory=~/.vim/tmp,.

" syntax highlighting
syntax on

" Numbered lines
set number

" No compatible mode
set nocompatible

" Spell check, because I can't type
set spelllang=en
set spell
